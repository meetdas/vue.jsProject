@using fitnessManagementSystem.App.Models;
@model IEnumerable<Branch>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-10">
        <h3 class="text text-info">BRANCHES</h3>
    </div>

    <div class="col-2 text-right">
        <a asp-action="Add" class="btn btn-info" ><i class="fa-sharp fa-solid fa-circle-plus"></i>&nbsp;&nbsp;&nbspAdd New Branch &nbsp;&nbsp&nbsp;</a>
    </div> 
</div>
<br />
<div>
    <table class="table table-striped border">
         <thead>
        <tr class="table-info">
                <th class="row-cols-6">
                    @Html.DisplayNameFor(c=>c.Name)
                </th>
                <th></th>
                <th></th>
        </tr>
         </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><partial name="_ButtonPartial" model="@item.Id"> </td>
                </tr>
            }
        </tbody>
    </table>
</div>


